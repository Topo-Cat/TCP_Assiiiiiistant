<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="PlcCommunicator.Views.ModBusTCPClosedLoopPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:con="clr-namespace:PlcCommunicator.ValueConveter"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlcCommunicator.Views"
        xmlns:vm="clr-namespace:PlcCommunicator.ViewModels"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- 常用颜色 - 保留必要的资源 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0078D7"/>
        <SolidColorBrush x:Key="AccentColor" Color="#0056A3"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
        <SolidColorBrush x:Key="BorderColor" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F4F4F4"/>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="LinkColor" Color="#0066CC"/>
        <SolidColorBrush x:Key="DisabledTextColor" Color="#888888"/>

        <!-- 基础样式 -->
        <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <!-- 修复 Label 样式 - 删除 BasedOn -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <!-- GroupBox 样式 - 简化 -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
        </Style>

        <!-- 按钮样式 - 简化模板 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource TextColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox 样式 - 简化模板 -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{StaticResource DisabledTextColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListView 样式 - 简化 -->
        <Style TargetType="ListView">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
        </Style>

        <!-- ListViewItem 样式 - 简化 -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="5,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#100078D7"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#200078D7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 日志和历史条目样式 -->
        <Style x:Key="LogItemStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <Style x:Key="SentHistoryItemStyle" TargetType="TextBlock" BasedOn="{StaticResource LogItemStyle}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        </Style>

        <!-- 状态灯样式 -->
        <Style x:Key="StatusLightStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="StrokeThickness" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                    <Setter Property="Fill" Value="{StaticResource SuccessColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                    <Setter Property="Fill" Value="{StaticResource ErrorColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- TabControl 简化样式 -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
        </Style>

        <!-- GridSplitter 样式 -->
        <Style TargetType="GridSplitter">
            <Setter Property="Background" Value="{StaticResource BorderColor}"/>
            <Setter Property="Width" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="ShowsPreview" Value="True"/>
            <Setter Property="ResizeBehavior" Value="PreviousAndNext"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>



    </UserControl.Resources>

    <!-- 整体布局 -->
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="{StaticResource LightBackgroundColor}" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
            <Grid Margin="8,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{Binding ToggleServerCommand.IsExecute}" Style="{StaticResource ActionButtonStyle}" Command="{Binding ToggleServerCommand}"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                    <TextBlock Text="连接状态:" VerticalAlignment="Center" Margin="5,0"/>
                    <Ellipse Style="{StaticResource StatusLightStyle}" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ServerStatus}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="1" Content="显示日志Tab"
                        Command="{Binding ShowLogTabCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 上部分左右两栏内容 -->
            <Grid Grid.Row="0" Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" MinWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧面板 -->
                <Grid Grid.Column="0" Margin="0,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ModBus TCP 连接设置 -->
                    <GroupBox Grid.Row="0" Header="ModBus TCP 连接设置" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 连接参数区域 -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="IP 地址:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="1" Text="{Binding IPAddress}" Margin="0,0,10,0" 
                                         VerticalContentAlignment="Center"/>

                                <TextBlock Text="端口:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="3" Text="{Binding Port}" Margin="0,0,10,0" 
                                         VerticalContentAlignment="Center"/>

                                <TextBlock Text="站号:" Grid.Column="4" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Column="5" Text="{Binding SlaveId}" Margin="0,0,10,0" 
                                         VerticalContentAlignment="Center"/>

                                <TextBlock Grid.Column="6" Text="高级设置" VerticalAlignment="Center" 
                                           HorizontalAlignment="Right" Margin="0,0,5,0"
                                           Foreground="{StaticResource LinkColor}" TextDecorations="Underline" 
                                           Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding Gesture="LeftClick"
                                                    Command="{Binding OpenAdvancedSettingsCommand}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </Grid>

                            <!-- 应用按钮区域 -->
                            <Button Grid.Row="1" Content="应用配置" 
                                   Command="{Binding ToggleServerCommand}" 
                                   Style="{StaticResource ActionButtonStyle}"
                                   Margin="0,8,0,0"
                                   MinWidth="110"
                                   HorizontalAlignment="Right"/>
                        </Grid>
                    </GroupBox>

                    <!-- 报文历史 -->
                    <GroupBox Grid.Row="1" Header="报文历史" Margin="0">
                        <ListView ItemsSource="{Binding SentMessagesHistory}" 
                                 d:ItemsSource="{d:SampleData ItemCount=5}"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Style="{StaticResource SentHistoryItemStyle}"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>

                <!-- 分隔条 - 确保正确工作 -->
                <GridSplitter Grid.Column="1" 
                             Width="5" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Stretch"
                             Background="{StaticResource BorderColor}"
                             ShowsPreview="True"
                             ResizeBehavior="PreviousAndNext"
                             Margin="0"/>

                <!-- 右侧选项卡 -->
                <TabControl Grid.Column="2" Margin="5,0,0,0">
                    <!-- 通信日志选项卡 -->
                    <TabItem Header="通信日志">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 日志列表 - 使用虚拟化 -->
                            <ListView Grid.Row="0" ItemsSource="{Binding LogMessages}" 
                                     d:ItemsSource="{d:SampleData ItemCount=5}"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     VirtualizingPanel.CacheLengthUnit="Item"
                                     VirtualizingPanel.CacheLength="10">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Style="{StaticResource LogItemStyle}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- 日志控制区域 -->
                            <Grid Grid.Row="1" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" Content="自动滚动到最新日志"
                                        IsChecked="{Binding AutoScroll}" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="清空日志" Command="{Binding ClearLogCommand}"
                                            Style="{StaticResource ActionButtonStyle}" />
                                    <Button Content="导出日志" Command="{Binding ExportLogCommand}"
                                            Style="{StaticResource ActionButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!-- 功能区1选项卡 -->
                    <TabItem Header="功能区 1">
                        <TextBlock Text="这里放置功能区 1 的具体内容..." 
                                 Margin="10" VerticalAlignment="Top" 
                                 Foreground="{StaticResource TextColor}"/>
                    </TabItem>

                    <!-- 功能区2选项卡 -->
                    <TabItem Header="功能区 2">
                        <TextBlock Text="这里放置功能区 2 的具体内容..." 
                                 Margin="10" VerticalAlignment="Top" 
                                 Foreground="{StaticResource TextColor}"/>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- 发送报文区域 -->
            <Border Grid.Row="1" Background="{StaticResource LightBackgroundColor}"
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                    CornerRadius="4" Margin="10,0,10,5">
                <Grid Margin="10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 报文输入框 -->
                    <TextBox Grid.Column="0" Text="{Binding MessageToSend}"
                            Margin="0,0,10,0" 
                            Height="40" 
                            TextWrapping="Wrap" AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"/>

                    <!-- 按钮区域 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="清除报文"
                               Command="{Binding ClearMessageCommand}"
                               Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="发送报文"
                               Command="{Binding SendMessageCommand}"
                               Style="{StaticResource ActionButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="{StaticResource LightBackgroundColor}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
            <Grid Margin="10,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="连接数:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ConnectionCount}" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
